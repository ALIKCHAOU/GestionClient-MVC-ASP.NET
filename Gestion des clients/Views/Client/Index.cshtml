@model IEnumerable<Gestion_des_clients.Models.Client>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.code_client)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nom_client)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.raison_social)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.code_client)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nom_client)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.raison_social)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
